<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_top_margin"
        android:background="@android:color/white"
        android:orientation="vertical" android:paddingLeft="@dimen/item_top_margin"  >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_margin"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="50"
                android:text="会员升级通知"
                android:textColor="@color/txt_title_color"
                android:textSize="@dimen/textsize_three" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_status"
                android:text="2018-02-02"
                android:textColor="@color/title_empty"
                android:textSize="@dimen/textsize_one" android:layout_marginTop="@dimen/base_margin"/>

            <ImageView
                android:id="@+id/iv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/base_margin"
                android:src="@mipmap/rightarrows" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" android:layout_marginTop="@dimen/middle_margin" android:layout_marginRight="@dimen/item_top_margin">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginRight="5dp"
                android:src="@mipmap/empty"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:maxLength="100"
                android:textColor="@color/txt_body_color"
                android:textSize="@dimen/textsize_one" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/base_margin"
            android:background="@color/split_lin" android:layout_marginRight="@dimen/item_top_margin"/>

        <CheckBox
            android:id="@+id/cb_msg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_one"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_choice_all"
            android:padding="10dp"
            android:text="运单编号：12345678901"
            android:textColor="@color/txt_title_color"
            android:textSize="@dimen/textsize_two" android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
