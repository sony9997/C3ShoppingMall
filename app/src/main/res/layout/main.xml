<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/top_bg" android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_back"
            android:src="@mipmap/back"
            android:layout_weight="0"
            android:paddingTop="2dp" android:paddingBottom="2dp" android:paddingLeft="1dp" android:paddingRight="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp" android:id="@+id/tv_title"  android:ellipsize="end" android:maxLines="1"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_back"
            android:src="@mipmap/share"
            android:layout_weight="0"
            android:id="@+id/iv_share" android:paddingTop="2dp" android:paddingBottom="2dp" android:paddingLeft="1dp" android:paddingRight="1dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_main"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:progressDrawable="@drawable/pg"
        android:visibility="gone" />

    <WebView
        android:id="@+id/wv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"></WebView>

</LinearLayout>
